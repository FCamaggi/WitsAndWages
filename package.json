{
  "name": "wits-and-wagers-vegas",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "cd client && npm run build",
    "test:e2e": "playwright test e2e/wits-vegas-e2e.spec.ts",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:full": "playwright test e2e/full-game.spec.ts",
    "test:full:headed": "playwright test e2e/full-game.spec.ts --headed",
    "test:quick": "playwright test e2e/full-game.spec.ts -g \"Partida r√°pida\"",
    "test:all": "playwright test",
    "test:report": "playwright show-report"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "playwright": "^1.58.0",
    "concurrently": "^8.2.2"
  }
}
